        <div id="app" class="Layout">

            <header class="Header">

                <div class="Header-container">

                    <svg class="Header-mark">
                        <use xlink:href="#logo-mark"></use>
                    </svg>
                    <svg class="Header-logo">
                        <use xlink:href="#logo-portal"></use>
                    </svg>

                    <ul class="HeaderNav">

                        <li class="HeaderNav-item show-when-items-in-cart">
                            <a class="HeaderNav-link HeaderNav-cart" href="/portal/transaction_summary.aspx">
                                <svg role="img">
                                    <use xlink:href="#icon-cart"></use>
                                </svg>
                                <span id="js_qty_in_cart"></span>
                            </a>
                        </li>

                        <li class="HeaderNav-item HeaderNav-item--give">
                            <a class="HeaderNav-link" href="/portal/give">Give</a>
                        </li>

                        <li class="HeaderNav-item">

                            <span id="js_nav_toggle" class="HeaderNav-link">
                                <span class="hide-when-logged-in">My Account</span>
                                <span class="show-when-logged-in">
                                    <span id="js_first_name" class="Header-firstName"></span>
                                    <span id="js_last_name" class="Header-lastName"></span>
                                </span>
                                <svg role="img"><use xlink:href="#icon-chevron-down"></use></svg>
                            </span>

                            <div id="js_nav" class="Nav">
                                <ul class="Nav-menu">
                                    <li class="Nav-item"><a class="Nav-link" href="/portal/give">Give Online</a></li>
                                    <li class="Nav-item">
                                        <a class="Nav-link" href="/portal/my_giving.aspx">Your Giving History</a></li>
                                    <li class="Nav-item">
                                        <a class="Nav-link" href="/portal/my_contribution_statement.aspx">Your Contribution Statement</a>
                                    </li>
                                </ul>

                                <ul class="Nav-menu">
                                    <li class="Nav-item is-active">
                                        <a class="Nav-link" href="/portal/group_finder.aspx">Find a Group</a></li>
                                    <li class="Nav-item">
                                        <a class="Nav-link" href="/portal/my_groups.aspx">View Your Group</a>
                                    </li>
                                </ul>

                                <ul class="Nav-menu">
                                    <li class="Nav-item">
                                        <a class="Nav-link" href="/portal/my_user_account.aspx">Update Your Profile</a>
                                    </li>
                                    <li class="Nav-item show-when-logged-in">
                                        <a class="Nav-link" href="/portal/login.aspx?logout=true">Logout</a>
                                    </li>
                                </ul>

                            </div>

                        </li>

                    </ul>

